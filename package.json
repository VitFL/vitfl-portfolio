{
  "name": "vitfl.dev",
  "version": "0.1.0",
  "description": "vitfl.dev portfolio website",
  "main": "server.js",
  "scripts": {
    "build-server": "babel -d ./dist ./server -s",
    "start": "npm run build-server && node --require dotenv/config ./dist/server.js",
    "server": "nodemon --require dotenv/config --exec babel-node server/server.js ",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Vitaliy Tkachuk (VitFL)",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.7",
    "mongoose-validator": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.7",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "nodemon": "^2.0.2"
  }
}
